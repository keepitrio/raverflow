<%= form_for :question, url: questions_path do |f| %>

  <% if @errors%>
    <ul>
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
  <% end %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %>
    <%= f.text_field :content %>
  </p>

  <p>
    <%= f.hidden_field :questioner_id, value: current_user.id %>
  </p>

  <p>
    <%= f.submit "Post question" %>
  </p>

<% end %>
