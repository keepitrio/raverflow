<h1>Comments for <%= @question.title %></h1>

<%= link_to 'New question', new_question_path %>

<table>
  <tr>
    <th>Content:</th>
    <th>Posted by:</th>
    <% if commenter.id == current_user.id %>
      <th colspan="3"></th>
    <% end %>
  </tr>

  <% @question.comments.each do |comment| %>
    <tr>
      <td><%= comment.content %></td>
      <td><%= comment.commenter.username %></td>
      <% if commenter.id == current_user.id %>
        <td><%= link_to 'Edit', edit_question_path(comment) %></td>
        <td><%= link_to 'Destroy', question_path(comment),
                method: :delete,
                data: { confirm: "Are you sure?" } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
